{
  "name": "wpPluginUpdaterArchiver",
  "version": "1.0.0",
  "description": "WordPress Plugin Updater and Archiver",
  "main": "main.js",
  "homepage": "https://github.com/01one/wpPluginUpdaterArchiver",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "wordpress",
    "plugin"
  ],
  "author": {
    "name": "Mashiur Rahman",
    "email": "mashiurrahman99@outlook.com"
  },
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.9",
    "axios": "^1.3.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.13.3",
    "electron-installer-snap": "^5.2.0"
  },
  "build": {
    "appId": "com.01one.wordpresspluginarhiver",
    "productName": "wpPluginUpdaterArchiver",
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.png"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development",
      "icon": "build/icons/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    }
  }
}
